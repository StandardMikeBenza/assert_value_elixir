defmodule MiscTest do
  use ExUnit.Case

  import AssertValue

  test "simple pass" do
    assert_value 1 == 1
  end

  test "reprompt context" do
    actual = String.duplicate("line\n", 38)
    # prompt: y
    assert_value actual
  end

  # tests with prompt answer n go below here

