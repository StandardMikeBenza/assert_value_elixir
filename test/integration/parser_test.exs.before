defmodule ParserTest do
  use ExUnit.Case

  import AssertValue

  test "newlines" do
    assert_value "foo" ==
    "foo"
    # prompt: y
    assert_value "foo" ==
    "bar"

    assert_value "foo"
    == "foo"
    # prompt: y
    assert_value "foo"
    == "bar"
  end

  test "parentheses" do
    assert_value("foo" == "foo")
    # prompt: y
    assert_value("foo" == "bar")

    assert_value(
    "foo" == "foo"
    )
    # prompt: y
    assert_value(
    "foo" == "bar"
    )

    assert_value(
    "foo"
    ==
    "foo"
    )
    # prompt: y
    assert_value(
    "foo"
    ==
    "bar"
    )
  end

  test "elixir 1.6 formatter" do
    assert_value(
      "foo\nbar" == """
      foo
      bar<NOEOL>
      """
    )

    # prompt: y
    assert_value(
      "foo\nbar" == """
      foo
      baz
      """
    )
  end

  test "expressions" do
    # prompt: y
    assert_value (
      "bar=="
      <> "baz" ==
      "baz=="
      <> "foo"
    )
  end

end
