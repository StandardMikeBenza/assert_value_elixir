defmodule ParserTest do
  use ExUnit.Case

  import AssertValue

  test "newlines" do
    assert_value "foo" ==
    "foo"
    # prompt: y
    assert_value "foo" ==
    "bar"

    assert_value "foo"
    == "foo"
    # prompt: y
    assert_value "foo"
    == "bar"
  end

  test "parens" do
    assert_value("foo" == "foo")
    # prompt: y
    assert_value("foo" == "bar")

    assert_value(
    "foo" == "foo"
    )
    # prompt: y
    assert_value(
    "foo" == "bar"
    )

    assert_value(
    "foo"
    ==
    "foo"
    )
    # prompt: y
    assert_value(
    "foo"
    ==
    "bar"
    )
  end

  test "elixir 1.6 formatter" do
    assert_value(
      "foo\nbar" == """
      foo
      bar<NOEOL>
      """
    )

    # prompt: y
    assert_value(
      "foo\nbar" == """
      foo
      baz
      """
    )
  end

  test "expressions" do
    # prompt: y
    assert_value (
      "bar=="
      <> "baz" ==
      "baz=="
      <> "foo"
    )
  end

  test "more parens" do
    # prompt: y
    assert_value (1 + 2) == 4

    # prompt: y
    assert_value(
      ("foo" <> "bar"
      <> "baz")
      ==
      "foo"
    )

    # prompt: y
    assert_value(
      (("foo" <> "\nbar")
      <> "\n"
      <> "baz")
      ==
      "foo"
    )
  end

  test "multiple parens" do
    # prompt: y
    assert_value ((((1 + 2)) == 4))
  end

  test "create with parens" do
    # prompt: y
    assert_value (1 + 2)

    # prompt: y
    assert_value ((1 + 2))

    # prompt: y
    assert_value (((1 + 2)))

    # prompt: y
    assert_value(
      ("foo" <> "bar"
      <> "baz")
    )

    # prompt: y
    assert_value(
      (("foo" <> "\nbar")
      <> "\n"
      <> "baz")
    )
  end

end
