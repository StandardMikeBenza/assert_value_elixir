defmodule AcceptAllWithErrorTest do
  use ExUnit.Case

  import AssertValue

  # prompt: Y

  test "all pass" do
    assert_value "foo"
    assert_value "foo" == """
    bar<NOEOL>
    """
    assert_value "foo" == """
    baz<NOEOL>
    """
  end

  test "one fail with error" do
    assert_value "foo"
    assert_value "foo" == "bar"
    assert_value "foo" == """
    baz<NOEOL>
    """
  end

  test "all pass again" do
    assert_value "foo" == """
    foo<NOEOL>
    """
    assert_value "bar" == """
    bar<NOEOL>
    """
  end

end
