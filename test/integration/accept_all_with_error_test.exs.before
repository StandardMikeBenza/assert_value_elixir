defmodule AcceptAllWithErrorTest do
  use ExUnit.Case

  import AssertValue

  # prompt: Y

  test "all pass" do
    assert_value "foo"
    assert_value "foo\nbar" == """
    bar<NOEOL>
    """
    assert_value "foo\nbaz" == """
    baz<NOEOL>
    """
  end

  test "one fail with error" do
    assert_value "foo"
    assert_value "foo" == "bar"
    assert_value "foo\nbaz" == """
    baz<NOEOL>
    """
    assert_value "foo" == 4
  end

  test "all pass again" do
    assert_value "foo\nfoo" == """
    foo<NOEOL>
    """
    assert_value "bar\nbar" == """
    bar<NOEOL>
    """
  end

end
