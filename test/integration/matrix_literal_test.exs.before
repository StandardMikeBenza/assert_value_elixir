defmodule MatrixLiteralTest do
  use ExUnit.Case

  defmodule User do
    defstruct name: "John", age: 27
  end

  import AssertValue

  test "create expected from literal" do
    # prompt: y
    assert_value nil

    # prompt: y
    assert_value :nil

    # prompt: y
    assert_value true

    # prompt: y
    assert_value false

    # prompt: y
    assert_value :atom

    # prompt: y
    assert_value 42

    # prompt: y
    assert_value -42

    # prompt: y
    assert_value 0.42

    # prompt: y
    assert_value 42_000

    # prompt: y
    assert_value 42.0e-5

    # prompt: y
    assert_value 42.0e+5

    # prompt: y
    assert_value 0x2A

    # prompt: y
    assert_value "forty-two"

    # prompt: y
    assert_value "сорок два"

    # prompt: y
    assert_value "forty-two\nсорок два\n四十二\nquarante deux\ncuarenta y dos\nzweiundvierzig"

    # prompt: y
    assert_value """
    forty-two
    сорок два
    四十二
    quarante deux
    cuarenta y dos
    zweiundvierzig
    """

    # prompt: y
    assert_value 'forty-two'

    # prompt: y
    assert_value '''
    forty-two
    сорок два
    四十二
    quarante deux
    cuarenta y dos
    zweiundvierzig
    '''

    # prompt: y
    assert_value <<4,2>>

    # prompt: y
    assert_value [4, 2, true, nil, "42"]

    # prompt: y
    assert_value {:ok, 42}

    # prompt: y
    assert_value %{a: "forty", b: 2, c: nil}

    # prompt: y
    assert_value %User{}

    # prompt: y
    assert_value %User{age: 42}

    # prompt: y
    assert_value  [%{a: 42, b: {:left, :light}, c: [%User{}, 1]}, nil]
  end

  test "create expected from variable" do
